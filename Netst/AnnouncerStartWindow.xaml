<Window x:Class="Netst.AnnouncerStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Netst"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Starting announcer..." Height="300" Width="300"
        MinHeight="300" MinWidth="300"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Image Width="128" Height="128" gif:ImageBehavior.AnimatedSource="pack://siteoforigin:,,,/Resources/loading-block.gif" />
            <Label Foreground="#fc6400" FontWeight="Bold" HorizontalAlignment="Center">Starting announcer...</Label>
            <Label Foreground="#fc6400" FontWeight="Bold" HorizontalAlignment="Center">Waiting for local DNS resolution...</Label>
        </StackPanel>
    </Grid>
</Window>
